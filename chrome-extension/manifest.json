{
  "manifest_version": 3,
  "name": "Fragments Recorder",
  "version": "1.10",
  "permissions": ["tabCapture", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "http://localhost/*",
        "http://127.0.0.1/*"
      ],
      "js": ["videoCapture.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["fragmentsLogo.svg"],
      "exclude_matches": [
        "http://localhost/*",
        "http://127.0.0.1/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}